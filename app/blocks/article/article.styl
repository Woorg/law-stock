.article
	padding-top 16px
	padding-right 19px
	padding-bottom 19px
	padding-left 19px
	background-color #ffffff
	border-radius 2px
	letter-spacing tracking(10,14)
	box-shadow 0 3px 10px rgba(0, 0, 0, 0.19)
	@extends .wysiwyg
	clr()
	overflow hidden
	+r($t)
		padding-bottom 15px
	&__top
		position relative
		margin-bottom 8px
		clr()
		+r($t)
			display flex
			flex-direction column
	&__title
		margin-right 110px
		margin-bottom 1px
		+r($t)
			margin-right 0
			margin-bottom 10px
	&__date
		margin-bottom 7px
		color #727272
		font-size 13px
		letter-spacing tracking(10,13)
		+r($t)
			order 3

	&__cat
		position relative
		padding-left 26px
		font-family $pBld
		letter-spacing tracking(10,14)
		+r($t)
			margin-bottom 10px
	&__cat-icon
		position absolute
		top 50%
		left 0
		width 15px
		height 18px
		fill #000
		transform translateY(-50%)
	&__rating
		position absolute
		top 7px
		right 6px
		width 110px
		+r($t)
			top auto
			bottom 6px
	&__image
		position relative
		margin-bottom 6px
		+r(320px)
			margin-left -19px
			margin-right -19px
		img
			display block
			max-width 100%
			height auto
	&__image_left
		margin-top 5px
		margin-right 15px
		// margin-bottom 15px
		float left
		+r($m)
			margin-left -19px
			margin-right -19px
			float none
	&__image_right
		margin-top 5px
		margin-left 15px
		// margin-bottom 15px
		float right
		+r($m)
			margin-left -19px
			margin-right -19px
			float none

	&__social
		margin-bottom 0
