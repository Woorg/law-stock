.case
	position relative
	padding-left 20px
	padding-right 20px
	padding-bottom 30px
	padding-top 15px
	background-color #ffffff
	border-radius 2px
	box-shadow 0 3px 10px rgba(0, 0, 0, 0.19)
	+r($t)
		padding-top 8px
		padding-right 15px
		padding-bottom 17px
		padding-left 15px
	&__title
		margin-top 0
		margin-bottom 25px
		padding-right 40px
		font-family $pBld
		font-size 24px
		letter-spacing 0.12px
		+r($t)
			margin-bottom 8px
			font-size 14px
			line-height 1.28571428571429
			letter-spacing 0.07px
	&__fav
		position absolute
		top 15px
		right 20px
	&__meta
		font-size 16px
		line-height 1.875
		color #727272
		letter-spacing 0.16px
		+r($t)
			font-size 14px
	&__item
		margin-bottom 0
		&:last-child
			margin-bottom 0
	&__item-term
		margin-left 5px
		display inline-block
		vertical-align top
		+r($t)
			margin-left 0
		&:first-child
			margin-left 0
	&__item-desc
		color #000
	&__link
		text-decoration none
		color #000
		&:hover
			color #000
			text-decoration underline
	&__desc
		margin-top 60px
		+r($t)
			margin-top 0
	&__desc-title
		margin-bottom 10px
		color #727272
		font-size 16px
		+r($t)
			margin-bottom 0
			font-size 14px
	&__text
		margin-bottom 30px
		@extends .wysiwyg
		+r($t)
			margin-bottom 23px
		p
			margin-top 0
			font-size 16px
			line-height 1.875
			+r($t)
				font-size 14px
	&__button-w
		text-align center

