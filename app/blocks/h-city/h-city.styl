.h-city
	font-family $pR
	&__link
		position relative
		display inline-block
		vertical-align middle
		color #FFF
		font-size 14px
		line-height 1
		text-decoration dotted
		+r($t)
			// margin-right 4px
			// padding-left 4px
			font-size 11px
			line-height 1
		+r($m)
			font-size 9px
		&:after
			position absolute
			top 100%
			left 0
			width 100%
			height 0
			border-top 1px dotted #fff
			content ""
			tr(all .3s ease)
		&:hover
			color #FFF
			text-decoration dotted
			&:after
				border-top 1px dotted transparent
