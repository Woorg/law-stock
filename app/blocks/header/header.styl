.header
	+r($t)
		padding-top 0
		display block
	+r($m)
		padding-top 6px
	+r($mS)
		padding-top 0
	&__logo
		a
			+r($t)
				margin-left 10px
	.header-description
		+r($t)
			line-height 1
	&__city
		margin-right 47px
		+r($t)
			margin-right 4px
			margin-left 8px
			font-size 11px
			line-height 1
		+r($m)
			font-size 9px

	&__info-w
		font-size 0
	&__info
		margin-right 28px
		display inline-block
		vertical-align top
		font-size 14px
		font-weight bold
		+r($t)
			// margin-right 0
			font-size 11px
			line-height 1
		+r($m)
			font-size 9px

		&:last-child
			margin-right 0
	&__info-val
		color #60d9c6
	&__user
		margin-left 27px
		min-width 155px
		+r($t)
			margin-left 7px
			// min-width 115px
			min-width 30px
			font-size 11px

	&__fav
		margin-left auto
		margin-right 20px
		+r($m)
			margin-right 0
			font-size 11px

	&__bottom
		display none
		+r($t)
			display block
			padding-top 4px
			padding-bottom 4px
			background #FFF
			box-shadow 0 3px 5px rgba(0, 0, 0, 0.19)
	&__button
		display none
		+r($t)
			display inline-block
			vertical-align top
	&__triggers
		display flex
		justify-content flex-end
	&__trigger
		margin-left 10px
		border none
		background none
		text-align left
		hide-text()
		opacity 1
		tr(all .3s ease)
		&:first-child
			margin-left 0
		&:hover
			opacity .6
	&__trigger_filter
		retinaSprite($filter_trigger_group)
	&__trigger_search
		retinaSprite($search_group)
	&__in
		@extends .in
		display flex
		justify-content space-between
		align-items center
