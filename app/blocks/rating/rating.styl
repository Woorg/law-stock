.rating
	font-size 0
	line-height 1
	transform rotate(180deg)
	&__item
		margin-left 5px
		display inline-block
		vertical-align top
		font-size 50px
		line-height 1px
		fill #c7c7c7
		text-decoration none
		transition color .4s
		tr(all .3s ease)
		&:hover,
		&:hover ~ a,
		&:focus,
		&:focus ~ a
			fill #ead76c
			cursor pointer
		&:first-child
			margin-left 0
	&__star
		position relative
		width 17px
		height 16px
		transform rotate(35deg)
