extends /blocks/layout-default/layout-default

include /blocks/header/header
include /blocks/hero/hero
include /blocks/main/main
include /blocks/side/side
include /blocks/side-widget/side-widget

include /blocks/filter/filter
include /blocks/content/content
//- include /blocks/article/article
include /blocks/notifications/notifications
include /blocks/case/case
include /blocks/comments/comments
include /blocks/cards/cards
include /blocks/search-form/search-form
include /blocks/footer/footer

include /blocks/icon/icon


block head
	- var pageTitle = 'LawStock - Подготовить документы для регистрации ООО';

block content
	.overlay
	+header()
	+main().main-content
		.main__w
			+side().main__side
				+side-widget-1().side-widget_stat.main__side-widget
				+side-widget-2().side-widget_act.main__side-widget
				+side-widget-3().side-widget_bank.main__side-widget

			+content().main__content

				+notifications().main__notifications
				.main__buttons
					a.main__button.button.button_icon.button_bank(href="#link")
						+icon('bank', true).button__icon
						span Увеличить гонорар
					a.main__button.button.button_icon.button_complete(href="#link")
						+icon('check', true).button__icon
						span Работа выполнена
					a.main__button.button.button_icon.button_decline(href="#link")
						+icon('refuse', true).button__icon
						span Отказаться от исполнителя
					a.main__button.button.button_icon.button_moderate(href="#link")
						.button__icon
						span Пригласить арбитра

				+comments-messages().main__messages.comments_messages

	+footer()

	.cat-filter
		+filter()
