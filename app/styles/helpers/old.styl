.control
	display block
	position relative
	padding-left 25px
	cursor pointer
	input
		position absolute
		z-index -1
		opacity 0
		&:checked
			& ~ .control__indicator
				border #fff solid 1px
				background #60D9C6
				&:after
					display block
		&:disabled
			& ~ .control__indicator
				background #e6e6e6
				opacity 0.6
				pointer-events none

.control__indicator
	border #9d9c9c solid 1px
	position absolute
	top 2px
	left 0
	height 15px
	width 15px
	&:after
		content ''
		position absolute
		display none

.control:hover input:not([disabled]):checked ~ .control__indicator,
.control input:checked:focus ~ .control__indicator
	background #60D9C6

.control--checkbox
	.control__indicator
		&:after
			left 5px
			top 2px
			width 3px
			height 8px
			border solid #fff
			border-width 0 2px 2px 0
			transform rotate(45deg)

