#menuToggle
	cursor pointer
	height 20px
	position relative
	transform rotate(0deg)
	transform rotate(0deg)
	transition .5s ease-in-out
	transition .5s easeout
	width 20px
	span
		display block
		margin-bottom 4px
		position absolute
		height 1px
		width 18px
		background #fff
		opacity 1
		left 0
		transform rotate(0deg)
		transition .25s ease-in-out
		transition .25s easeout
		&:first-child
			top 5px
		&:last-child
			top 13px
	&.open
		span
			&:first-child
				top 18px
				width 0
				left 50%
			&:nth-child(2)
				transform rotate(45deg)
			&:nth-child(3)
				transform rotate(-45deg)
			&:last-child
				top 18px
				width 0
				left 50%

